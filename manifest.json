{
    "manifest_version": 2,
    "name": "Brave Extension",
    "version": "1.0",
    "description": "An extension to save and manage tabs in folders.",
    "permissions": [
        "tabs",
        "storage"
    ],
    "browser_action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icons/icon16.png",
            "48": "icons/icon48.png",
            "128": "icons/icon128.png"
        },
        "default_title": "Save Tabs"
    },
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    }
}
